<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="ImageJ-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#debugj2se) -->
    <target depends="build" description="Build and run ImageJ." name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="ImageJ" transport="dt_socket"/>
        <java classname="ij.ImageJ" classpath="ij.jar" fork="yes">
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
    <target name="-profile-check">
        <startprofiler freeform="true"/>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://netbeans.org/kb/articles/freeform-config.html#profilej2se) -->
    <target depends="-profile-check" description="Build and run ImageJ." if="profiler.configured" name="profile-nb">
        <java classname="ij.ImageJ" classpath="ij.jar" fork="yes">
            <jvmarg line="${agent.jvmargs}"/>
        </java>
    </target>
</project>
